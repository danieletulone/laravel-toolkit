{
    "name": "danieletulone/toolkit",
    "description": "This package provides some classes, utilities, views, controller for build easier laravel application.",
    "keywords": [
        "danieletulone",
        "toolkit"
    ],
    "homepage": "https://github.com/danieletulone/toolkit",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Daniele Tulone",
            "email": "danieletulone.work@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/support": "^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Danieletulone\\Toolkit\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Danieletulone\\Toolkit\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Danieletulone\\Toolkit\\ToolkitServiceProvider"
            ],
            "aliases": {
                "Toolkit": "Danieletulone\\Toolkit\\ToolkitFacade"
            }
        }
    }
}
